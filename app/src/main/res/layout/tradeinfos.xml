            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="horizontal"
                android:weightSum="1">

                <CheckBox

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:text="Western Union"
                    android:textColor="#000"
                    android:textSize="10dp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.50"
                    android:text="MoneyGram"
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.65" />

        </LinearLayout>
        <!---->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:weightSum="1">

                <Button
                    android:id="@+id/addmorepro"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="0.65"
                    android:background="@color/colorPrimary"
                    android:text="Add more payment options"
                    android:textAllCaps="false"
                    android:textColor="#fff" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/addmorepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.35" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/showpays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.65" />

        </LinearLayout>
    </LinearLayout>
</ScrollView><!--</android.support.constraint.ConstraintLayout>-->