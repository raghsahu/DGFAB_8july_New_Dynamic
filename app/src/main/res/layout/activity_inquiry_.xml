<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BusinessDashboard.Inquiry_Activity">


    <androidx.appcompat.widget.Toolbar

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_post"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary"
        android:layout_height="45dp">

        <LinearLayout
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_cancel_black_24dp"
                android:id="@+id/inquries"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="start|center"
                android:text="Inquiries"
                android:textColor="#fff"
                android:textSize="15dp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/chatnow"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Send Now"
                android:textColor="#fff"
                android:textSize="15dp"
                android:typeface="serif" />



            <ImageView
                android:src="@drawable/ic_send_black_24dp"
                android:id="@+id/sentbtn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Chat Now"
                android:textColor="#fff"
                android:textSize="15dp"
                android:typeface="serif" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:padding="20dp"
            android:text="Hi,"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="normal" />

        <EditText
            android:text="I'm Interested in your product,i would \n like some more details.\n
i look forward for your reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </EditText>

        <TextView
            android:text="Regards,"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



        </TextView>

        <EditText
            android:hint="Your name"
          android:id="@+id/maname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >



        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="You Can always get latest updates by connecting with peoples for altest feeds and tier updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </TextView>

    </LinearLayout>

</LinearLayout>